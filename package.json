{
	"name": "@nico-i/generator-ts",
	"version": "1.4.1",
	"description": "A yeoman generator for all my TypeScript related projects",
	"author": {
		"name": "Nico Ismaili",
		"email": "nico@ismaili.de",
		"url": "https://nico.ismaili.de"
	},
	"files": [
		"generators",
		"lib"
	],
	"main": "generators/index.js",
	"keywords": [
		"yeoman-generator"
	],
	"engines": {
		"npm": ">= 4.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@eslint/js": "^9.5.0",
		"@types/eslint__js": "^8.42.3",
		"@types/mem-fs": "^1.1.5",
		"@types/yeoman-generator": "^5.2.14",
		"@types/yosay": "2.0.3",
		"chalk": "4.1.2",
		"gulp": "^5.0.0",
		"gulp-cli": "^3.0.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"yeoman-generator": "^5.3.0",
		"yosay": "^2.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@nico-i/eslint-config": "latest",
		"@nico-i/prettier-config": "latest",
		"@nico-i/ts-config": "latest",
		"commitlint-plugin-spend": "latest",
		"eslint": "9.x",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.6",
		"prettier": "^3.3.2",
		"yo": "^5.0.0"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"scripts": {
		"build": "bunx gulp",
		"dev": "bunx gulp watch",
		"lint": "bunx eslint .",
		"lint:fix": "bunx eslint --fix .",
		"lint:types": "tsc --noEmit --incremental false",
		"prepare": "husky || true",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"repository": "nico-i/generator-ts",
	"license": "MIT"
}

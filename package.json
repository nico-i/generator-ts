{
	"name": "@nico-i/generator-ts",
	"version": "0.0.1",
	"description": "A yeoman generator for all my TypeScript related projects",
	"author": {
		"name": "Nico Ismaili",
		"email": "nico@ismaili.de",
		"url": "https://nico.ismaili.de"
	},
	"type": "module",
	"files": [
		"generators",
		"lib"
	],
	"main": "generators/index.js",
	"keywords": [
		"yeoman-generator"
	],
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@nico-i/eslint-config": "^1.1.0",
		"@nico-i/prettier-config": "^1.0.0",
		"@nico-i/ts-config": "^1.2.0",
		"commitlint-plugin-spend": "^1.0.1",
		"eslint": "^9.0.0",
		"husky": "^9.0.11",
		"jest": "^29.0.0",
		"lint-staged": "^15.2.6",
		"prettier": "^3.3.2",
		"yeoman-assert": "^3.1.1",
		"yeoman-test": "^8.0.0"
	},
	"engines": {
		"npm": ">= 4.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"chalk": "^5.0.0",
		"yeoman-generator": "^7.0.0",
		"yosay": "^3.0.0"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"scripts": {
		"lint": "eslint .",
		"lint:types": "tsc --noEmit --incremental false",
		"lint:fix": "eslint --fix .",
		"test": "jest",
		"prepare": "husky || true",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"repository": "nico-i/generator-ts",
	"license": "MIT"
}

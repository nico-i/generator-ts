{
	"extends": "@nico-i/ts-config/basic",
	"compilerOptions": {
		"target": "es6",
		"lib": ["es6"],
		"moduleResolution": "node",

		"module": "commonjs",
		"rootDir": "./src",

		"outDir": ".",

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"strict": true,
		"noImplicitAny": true,

		"skipLibCheck": true,
		"strictNullChecks": true,
		"sourceMap": false
	},
	"include": ["src/**/*"],
	"exclude": ["**/templates/**", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}

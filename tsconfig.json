{
	"extends": "@nico-i/ts-config/basic",
	"compilerOptions": {
		"outDir": ".",
		"rootDir": "./src",
		"module": "commonjs",
		"target": "es6",
		"lib": ["es6"],
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"sourceMap": false,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/templates/**", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
